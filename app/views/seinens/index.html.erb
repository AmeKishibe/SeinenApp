<div class="Logo">
  <h1>SeinenJump</h1>
</div>
<p id="notice"><%= notice %></p>


<table class="table table-dark">
  <thead>
    <tr>
      <th>Title</th>
      <th>Article</th>
      <th>Nom d'utilisateur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seinens.each  do |seinen| %>
      <tr>
        <td><%= seinen.title %></td>
        <td><%= seinen.article.truncate(50) %></td>
        <td><%= seinen.User_name %></td>
        <td><%= link_to "Voir l'article en entier" , seinen %></td>
        <td><%= link_to 'Modifier', edit_seinen_path(seinen) %></td>
        <td><%= link_to 'Effacer', seinen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvel avis', new_seinen_path %>
<%= link_to "Accueil", root_path %>
